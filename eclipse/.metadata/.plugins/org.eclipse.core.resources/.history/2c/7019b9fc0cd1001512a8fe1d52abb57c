package me.diabolicatrix.items;

import me.diabolicatrix.entities.EntityLifeTrader;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;
import net.minecraft.util.BlockPos;
import net.minecraft.util.EnumFacing;
import net.minecraft.util.MathHelper;
import net.minecraft.util.Vec3;
import net.minecraft.world.World;

public class ItemDebug extends Item
{

    public ItemDebug()
    {
        this.maxStackSize = 1;
        this.setUnlocalizedName("debug");   
    }
    
    @Override
    public boolean onItemUse(ItemStack stack, EntityPlayer playerIn, World worldIn, BlockPos pos, EnumFacing side, float hitX, float hitY, float hitZ)
    {
        if(!worldIn.isRemote)
        {
            Vec3 v3 = playerIn.getLookVec();
            EntityLifeTrader trader = new EntityLifeTrader(worldIn);
            trader.setPositionAndRotation(v3.xCoord, v3.yCoord, v3.zCoord, 100.0f, 0.0f);
            worldIn.spawnEntityInWorld(trader);
            trader.moveEntityWithHeading(0.0f, 10.0f);
        }
        
        return true;
    }
    
}
