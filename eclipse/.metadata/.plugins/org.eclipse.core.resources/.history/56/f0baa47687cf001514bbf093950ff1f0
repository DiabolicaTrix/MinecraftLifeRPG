package me.diabolicatrix.packets;

import io.netty.buffer.ByteBuf;
import net.minecraft.entity.DataWatcher;
import net.minecraft.server.MinecraftServer;
import net.minecraftforge.fml.common.network.ByteBufUtils;
import net.minecraftforge.fml.common.network.simpleimpl.IMessage;
import net.minecraftforge.fml.common.network.simpleimpl.IMessageHandler;
import net.minecraftforge.fml.common.network.simpleimpl.MessageContext;

public class PacketSync implements IMessage
{
    int syncedInt;
    
    public PacketSync()
    {
        
    }
    
    public PacketSync(int syncedInt)
    {
        this.syncedInt = syncedInt;
    }
    
    @Override
    public void fromBytes(ByteBuf buf)
    {
        this.syncedInt = buf.readInt();
    }

    @Override
    public void toBytes(ByteBuf buf)
    {
         buf.writeInt(this.syncedInt);
    }

    public static class Handler implements IMessageHandler<PacketSync, IMessage> {
        
        @Override
        public IMessage onMessage(PacketSync message, MessageContext ctx) {
            DataWatcher dw = ctx.getServerHandler().playerEntity.getDataWatcher();
            dw.updateObject(25, message.syncedInt);
            return null;
        }
    }
    
}
