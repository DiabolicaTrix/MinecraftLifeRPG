package me.diabolicatrix.mcliferpg;

import me.diabolicatrix.packets.PacketPlayerExtendedEntityProperties;
import me.diabolicatrix.proxy.CommonProxy;
import net.minecraft.entity.Entity;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.entity.player.EntityPlayerMP;
import net.minecraft.nbt.NBTTagCompound;
import net.minecraft.world.World;
import net.minecraftforge.common.IExtendedEntityProperties;

public class PlayerExtendedEntityProperties implements IExtendedEntityProperties
{

    public final static String EXT_PROP_NAME = "MCLRPGPlayerEEP";

    private EntityPlayer player;

    public int side;

    public PlayerExtendedEntityProperties(EntityPlayer player)
    {
        this.player = player;
        this.side = 0;
    }

    public static final void register(EntityPlayer player)
    {
        player.registerExtendedProperties(PlayerExtendedEntityProperties.EXT_PROP_NAME, new PlayerExtendedEntityProperties(player));
    }

    public static final PlayerExtendedEntityProperties get(EntityPlayer player)
    {
        return (PlayerExtendedEntityProperties)player.getExtendedProperties(EXT_PROP_NAME);
    }

    @Override
    public void saveNBTData(NBTTagCompound compound)
    {
        NBTTagCompound properties = new NBTTagCompound();

        properties.setInteger("Side", this.side);

        compound.setTag(EXT_PROP_NAME, properties);
    }

    @Override
    public void loadNBTData(NBTTagCompound compound)
    {
        NBTTagCompound properties = (NBTTagCompound)compound.getTag(EXT_PROP_NAME);
        this.side = properties.getInteger("Side");
    }

    private static String getSaveKey(EntityPlayer player)
    {
        return player.getUniqueID() + ":" + EXT_PROP_NAME;
    }

    public final void sync()
    {
        PacketPlayerExtendedEntityProperties packetMoney = new PacketPlayerExtendedEntityProperties(this.side);
        MinecraftLifeRPG.network.sendToServer(packetMoney);

        if(!player.worldObj.isRemote)
        {
            EntityPlayerMP player1 = (EntityPlayerMP)player;
            MinecraftLifeRPG.network.sendTo(packetMoney, player1);
        }
    }

    public static void saveProxyData(EntityPlayer player)
    {
        PlayerExtendedEntityProperties playerData = PlayerExtendedEntityProperties.get(player);
        NBTTagCompound savedData = new NBTTagCompound();

        playerData.saveNBTData(savedData);
        CommonProxy.storeEntityData(getSaveKey(player), savedData);
    }

    public static void loadProxyData(EntityPlayer player)
    {
        PlayerExtendedEntityProperties playerData = PlayerExtendedEntityProperties.get(player);
        NBTTagCompound savedData = CommonProxy.getEntityData(getSaveKey(player));

        if(savedData != null)
        {
            playerData.loadNBTData(savedData);
        }
        playerData.sync();
    }

    @Override
    public void init(Entity entity, World world)
    {

    }

}
