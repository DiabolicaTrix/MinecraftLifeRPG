    {
        if(event.entity instanceof EntityPlayer)
        {
            
        }
    }
    
    @SubscribeEvent
    @SideOnly(Side.CLIENT)
    public void onPlayerDeath(LivingDeathEvent event)
    {
        if(event.entity != null && event.entity instanceof EntityPlayer)
        {
            
        }
    }
}
