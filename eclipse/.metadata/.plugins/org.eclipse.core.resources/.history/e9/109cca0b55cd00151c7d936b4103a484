package me.diabolicatrix.events;

import me.diabolicatrix.mcliferpg.MinecraftLifeRPG;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraftforge.event.entity.living.LivingEvent.LivingJumpEvent;
import net.minecraftforge.fml.common.eventhandler.SubscribeEvent;
import net.minecraftforge.fml.common.gameevent.PlayerEvent.PlayerLoggedInEvent;

public class PlayerEventHandler
{

    @SubscribeEvent
    public void onPlayerLogin(PlayerLoggedInEvent event)
    {
        if(event.player != null)
        {
            event.player.openGui(MinecraftLifeRPG.instance, 0, event.player.worldObj, (int) event.player.posX, (int) event.player.posY, (int) event.player.posZ);
            System.out.println("Gui Opened!");
        }
    }
    
    @SubscribeEvent
    public void onPlayerBreakBlock(LivingJumpEvent event)
    {
        //event.setCanceled(true);
        if(event.entity != null && event.entity instanceof EntityPlayer)
        {
            System.out.println("Ok");
            ((EntityPlayer)event.entity).openGui(MinecraftLifeRPG.instance, 0, event.entity.worldObj, (int) event.entity.posX, (int) event.entity.posY, (int) event.entity.posZ);
        }
    }
    
}
