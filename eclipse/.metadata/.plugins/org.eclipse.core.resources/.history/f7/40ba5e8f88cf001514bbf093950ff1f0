package me.diabolicatrix.proxy;

import me.diabolicatrix.gui.GuiSideSelection;
import me.diabolicatrix.mcliferpg.MinecraftLifeRPG;
import me.diabolicatrix.packets.PacketSync;
import net.minecraft.entity.DataWatcher;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.world.World;
import net.minecraftforge.fml.common.network.IGuiHandler;

public class CommonProxy implements IGuiHandler
{
    private static int side = 0;
    
    @Override
    public Object getServerGuiElement(int ID, EntityPlayer player, World world, int x, int y, int z)
    {
        return null;
    }

    @Override
    public Object getClientGuiElement(int ID, EntityPlayer player, World world, int x, int y, int z)
    {
        if(ID == GuiSideSelection.ID)
            return new GuiSideSelection(player);
        return null;
    }

    public int getSide()
    {
        return side;
    }

    public void setSide(int side)
    {
        CommonProxy.side = side;
    }
    
    public void registerKeybinds()
    {
        
    }
    
    public void updateDataWatcher(int id, int value, EntityPlayer player)
    {
        DataWatcher dw = player.getDataWatcher();
        dw.updateObject(id, value);
        MinecraftLifeRPG.network.sendToServer(new PacketSync(value));
    }

}
